@import 'bootstrap/bootstrap'
@import 'nib'


body
  padding-top 60px
  background #E3E3E1
  
#myForm
  textarea,
  input[type='text'],
  select
    display block

.breadcrumb li, h3
  text-transform capitalize

h3
  font-size 35px
  text-align center

p.blurb
  text-align center
  margin-bottom 40px

.navbar-inverse .navbar-inner
  background-image linear-gradient(#535353, #171717)

.wrapper
  box-sizing border-box
  height 200px
  text-align center
  background-color whitesmoke
  transition background-color 0.3s
  border-radius 3px
  margin-bottom 20px

  & a
    font-size 14px
    color #333
    font-weight 800

  .header-image
    height 130px
    width 100%

  &:hover
    background-color white
extends layout

mixin parseObject(obj)
  div
    each val, key in obj
      if typeof val === 'string'
        p #{key} --- #{val}
      if key === 'date'
        p #{key} --- #{val.toDateString()}
      if key === 'created'
        p #{key} --- #{val.toDateString()}
      if key === 'prods'
        .prods
          span
            strong Prods: 
          each prod in val
            span #{prod}

block breadcrumbs
  li
    a(href="/") Home
    span.divider /
  li.active=documentType

block content
  h3=documentType
  ul.documents
  each doc, key in documents
    mixin parseObject(doc)
    a(href='/documents/'+ documentType +'/'+doc._id) View
    a(href='/documents/'+ documentType +'/edit/'+doc._id) Edit
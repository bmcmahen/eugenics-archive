@import 'bootstrap/bootstrap'
@import 'nib'


body
  padding-top 60px
  background #E3E3E1

h1
  text-align center

#myForm
  width 450px

  & textarea
    height 200px

#myForm
  textarea,
  input[type='text'],
  select
    display block
    width 100%
    min-height 35px
    margin-top 3px
    margin-bottom 0
    box-sizing border-box

.breadcrumb li, h3
  text-transform capitalize

h2
  font-size 25px
  line-height 25px
  text-transform capitalize

p.blurb
  text-align center
  margin-bottom 40px

.navbar-inverse .navbar-inner
  background-image linear-gradient(#535353, #171717)

.wrapper
  box-sizing border-box
  height 140px
  text-align center
  background-color whitesmoke
  transition background-color 0.3s
  border-radius 3px
  margin-bottom 20px
  line-height 140px

  & a
    font-size 14px
    color #333
    font-weight 800

  .header-image
    width 100%

  &:hover
    background-color white

table td
  background-color rgb(236, 236, 236)
  padding 13px 8px !important

  &.image
    padding 0px !important
    vertical-align middle
    padding-left 4px !important
    width 50px

  &.title
    width 180px

span.prod
  text-transform capitalize
  margin-right 3px

p.field-label
  text-transform capitalize
  font-weight bold

dt
  margin-top 10px
  text-transform capitalize

span.prod
  text-transform capitalize

a.new-document
  background-color #2c77ba
  color #eee
  background-image none

  &:hover
    background-color rgb(37, 100, 156)

  & i
    margin-right 5px

h4
  margin-bottom 30px
  font-size 20px

.dashboard
  margin-bottom 10px

  & a
    display block

.sort-by
  padding-top 15px

  & a
    display inline-block
    margin 0 10px

.prod.timeline
  margin-top 15px

.prod.heroes
  margin-bottom 15px

input[type='checkbox']
  margin 8px
  margin-top 5px

.navbar .navbar-inner
  position relative

#loading-wrapper
  position absolute
  width 50px
  left 50%
  margin-left -25px
  height 50px

label
  font-weight bold
  margin-bottom 0

.form-field
  margin-bottom 15px

span.help-block
  margin-top 2px

.well
  border 1px solid rgb(214, 209, 209)
  margin-bottom 5px

.image-input
  display none

.error-text
  margin-top 3px
  color red

#myForm .quote
  height 100px